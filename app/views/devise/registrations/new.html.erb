<div class="row form-header">
	<h3 class="col-md-offset-2 col-md-10">Sign up for eKite</h3>
</div>

<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), defaults: { input_html: { class: "form-control" }}) do |f| %>
  <%= f.error_notification %>

  <%= f.input :email %>
  <%= f.input :password %>
  <%= f.input :password_confirmation, label: "Confirm Password" %>

  <%= f.input :submit, :wrapper => :bs_submit_button do %>
    <%= f.submit "Sign up", :class => "btn btn-primary" %>
  <% end %>
<% end %>
<br/>
<p><%= render "devise/shared/links" %></p>