<h2 class="col-md-offset-2 col-md-10">Edit <%= current_user.name %>'s profile</h2>

<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), defaults: { input_html: { class: "form-control" }}, :html => { :method => :put }) do |f| %>
  <%= f.error_notification %>

  <%= f.input :name %>
  <%= f.input :email %>
  <%= f.input :password, label: "New Password", autocomplete: "off" %>
  <%= f.input :password_confirmation, label: "Confirm Password", autocomplete: "off" %>
  <%= f.input :current_password %>

  <%= f.input :submit, :wrapper => :bs_submit_button do %>
    <%= f.submit "Update", :class => "btn btn-primary" %>
  <% end %>

<% end %>

<br />
<p><%= link_to "Back", :back %></p>

<p><%= link_to "Cancel my account", registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete %></p>