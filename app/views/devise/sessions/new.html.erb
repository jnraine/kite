<div class="row form-header">
  <h3 class="col-md-offset-2 col-md-10">Sign into hereNow</h3>
</div>

<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), defaults: { input_html: { class: "form-control" }}) do |f| %>
  <%= f.error_notification %>

  <%= f.input :email %>
  <%= f.input :password %>

  <% if devise_mapping.rememberable? %>
    <%= f.input :remember_me, :wrapper => :bs_checkbox do %>
      <label>Remember me
        <%= f.check_box :remember_me %>
      </label>
    <% end %>
  <% end %>

  <%= f.input :submit, :wrapper => :bs_submit_button do %>
    <%= f.submit "Sign in", :class => "btn btn-primary" %>
  <% end %>
<% end %>
<br/>
<div class="col-md-offset-2">
  <p><% render "devise/shared/links" %></p>
  <p>hereNow is currently invitation-only. <%= link_to "Get in touch", "http://www.twitter.com/hereNowVictoria", :target => "_blank" %> if you'd like to add your own events.</p>
</div>