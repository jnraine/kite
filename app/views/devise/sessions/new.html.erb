<h2>Sign in</h2>

<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), defaults: { input_html: { class: "form-control" }}) do |f| %>
  <%= f.error_notification %>

  <%= f.input :email %>
  <%= f.input :password %>

  <% if devise_mapping.rememberable? %>
    <%= f.input :remember_me, :wrapper => :bs_checkbox do %>
      <label>Remember me
        <%= f.check_box :remember_me %>
      </label>
    <% end %>
  <% end %>

  <%= f.input :submit, :wrapper => :bs_submit_button do %>
    <%= f.submit "Sign in", :class => "btn btn-default" %>
  <% end %>

<% end %>

<%= render "devise/shared/links" %>