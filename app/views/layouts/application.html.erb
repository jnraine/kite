<!DOCTYPE html>
<html>
<head>
  <title>Kite</title>
  <%= stylesheet_link_tag "//netdna.bootstrapcdn.com/bootstrap/3.0.0-rc1/css/bootstrap.min.css", "application", :media => "all" %>
  <%= csrf_meta_tags %>
</head>
<body>
	<%= render 'layouts/header' %>

	<% flash.each do |name, msg| %>
    <%= content_tag(:div, msg, class: "alert alert-#{name}") %>
  <% end %>
  
	<%= yield %>

	<%= render 'layouts/footer' %>

</body>
</html>
