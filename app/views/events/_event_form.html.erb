<%= simple_form_for(@event, defaults: { input_html: { class: "form-control" }}) do |f| %>
  <%= f.error_notification %>

  <%= f.input :title %>
  <%= f.input :venue_id, collection: current_user.venues.order('name ASC') %>
  <%= f.input :category_id, collection: Category.order('name ASC') %>

  <%= f.input :local_start_time, label: "From", as: :datetime_local %>
  <%= f.input :local_end_time, label: "To", as: :datetime_local %>

  <%= f.input :repeat, label: "Repeat", collection: @event.repeat_options, include_blank: false %>
  <%= f.input :repeat, label: "Weekdays", collection: @event.weekday_options, as: :weekday_checkboxes %>
  <%= f.input :repeat_until, label: "Until", as: :html5_date %>

  <%= f.input :cost, as: :string %>
  <%= f.input :details, input_html: { rows: "3" } %>

  <%= f.input :submit, :wrapper => :bs_submit_button do %>
    <%= f.submit "Add event", :class => "btn btn-primary" %>
  <% end %>
<% end %>