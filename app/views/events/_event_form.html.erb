<%= simple_form_for(@event, defaults: { input_html: { class: "form-control" }}) do |f| %>
  <%= f.error_notification %>

  <%= f.input :title %>
  <%= f.input :venue_id, collection: current_user.venues.order('name ASC') %>
  <%= f.input :category_id, collection: Category.order('name ASC') %>

  <div class="form-group">
    <%= f.label "Time" %>
    <div class="col-md-10">
      <%= f.input_field :start_time, as: :time, :minute_step => 15, :class => "form-control form-control-time" %>
       &mdash; 
      <%= f.input_field :end_time, as: :time, :minute_step => 15, :class => "form-control form-control-time" %>
    </div>
  </div>

  <%= f.simple_fields_for :days do |date_field| %>
    <%= date_field.input :date, label: "Date", as: :string, input_html: { type: "date", class: "form-control auto-width" } %>
  <% end %>

  <div class="form-group">
    <div class="col-md-offset-2 col-md-10">
       <%= f.input_field :schedule, as: :boolean, :class => "", inline_label: "Everyday until" %>
    </div>
  </div>

  <%= f.input :end_date, label: "End Date", as: :string, input_html: { type: "date", class: "form-control auto-width" } %>

  <%= f.input :cost, as: :string %>
  <%= f.input :details, input_html: { rows: "3" } %>

  <%= f.input :submit, :wrapper => :bs_submit_button do %>
    <%= f.submit "Add event", :class => "btn btn-primary" %>
  <% end %>
<% end %>