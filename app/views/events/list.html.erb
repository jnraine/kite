<div class="row form-header form-header-list">
  <h3 class="col-sm-8">Manage your events</h3>
  <p class="col-sm-4">
    <%= link_to 'Add new event', new_event_path %>&emsp;
    <%= link_to 'Add new venue', new_venue_path %>
  </p>
</div>

<table class="table table-hover">
    <thead>
      <tr>
        <th>Title</th>
        <th>Venue</th>
        <th>Category</th>
        <th>Upcoming Dates</th>
        <th></th>
      </tr>
  </thead>
  <tbody>
    <% @events.sort_by(&:start_time).each do |event| %>
    <% edit = edit_event_path(event) %>
      <tr>
        <td><%= link_to event.title, edit %></td>
        <td><%= link_to event.venue.name, edit %></td>
        <td><%= link_to event.category.name, edit %></td>
        <td><%= link_to event.upcoming_dates, edit %></td>
        <td>
          <%= link_to 'Edit', edit %>&emsp;
          <%= link_to 'Delete', event, method: :delete, data: { confirm: 'Are you sure you want to delete this event?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>