<%= simple_form_for(@event, defaults: { input_html: { class: "form-control" }}) do |f| %>
  <%= f.error_notification %>

  <%= f.input :title %>
  <%= f.input :venue %>
  <%= f.input :address %>
  <div class="form-group">
    <%= f.label "Category" %>
    <div class="col-lg-10">
      <%= f.collection_select :category, Category.order('name ASC').all, :id, :name, {prompt: " "}, {class: "form-control auto-width"} %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label "Time" %>
    <div class="col-lg-10 form-control-time">
      From 
      <%= f.input_field :start_time, :class => " ", :minute_step => 15 %>
       to 
      <%= f.input_field :end_time, :class => " ", :minute_step => 15 %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label "Date" %>
    <div class="col-lg-10">
      <% unless @event.date? %>
        <% @event.date = Date.today %>
      <% end %>  
      <input type="date" class="form-control auto-width" name="event[date]" value="<%= @event.date %>">
    </div>
  </div>
  <%= f.input :cost, as: :string %>
  <%= f.input :details, input_html: { rows: "3" } %>

  <%= f.input :submit, :wrapper => :bs_submit_button do %>
    <%= f.submit "Add event", :class => "btn btn-default" %>
  <% end %>
<% end %>