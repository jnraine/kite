<div class="row">
  <div class="event-div">
    <div class="event-title">
      <h4>
        <%= event.title %>
      </h4>
      <p>
        @ <%= event.venue.name %>&emsp;
        <%= event.cost == 0 ? "Free" : number_to_currency(event.cost) %>
      </p>
    </div>
    <div class="event-details">
      <p>
        <%= event.venue.address %>
      </p>
      <p>
        From <%= event.start_time.strftime("%l:%M %P") %> to <%= event.end_time.strftime("%l:%M %P") %> on <%= event.days.first.date.strftime("%A, %B %e") %>
      </p>
      <p>
        <%= auto_link(event.details, :urls, :target => "_blank" ) %>
      </p>
      <ul>
        <li><%= toggle_fav(event, current_user) %></li>
        <li>
          <%= link_to content_tag(:span, " ", :class => "glyphicon glyphicon-share-alt"), "https://twitter.com/share", :'data-url' => event_path(event.id) %>
        </li>
        <li>
          <%= mail_to "fake@ekite.ca", content_tag(:span, " ", :class => "glyphicon glyphicon-flag"), :subject => "eKite Event flagged" %>
        </li>
        <li><%= toggle_subscribe(event.venue, current_user) %></li>
      </ul>
    </div>
  </div>
</div>