<% if @occurrences.fetch(:today).present? %>
  <div class="row red container">
    <h4>Today</h4>
  </div>
  <% @occurrences.fetch(:today).each do |occurrence| %>
    <%= render 'each_event', event: occurrence.event, occurrence: occurrence %>
  <% end %>
<% end %>

<% if @occurrences.fetch(:tomorrow).present? %>
  <div class="row red container">
    <h4>Tomorrow</h4>
  </div>
  
  <% @occurrences.fetch(:tomorrow).each do |occurrence| %>
    <%= render 'each_event', event: occurrence.event, occurrence: occurrence %>
  <% end %>
<% end %>

<% if @occurrences.fetch(:upcoming).present? %>
  <div class="row red container">
    <h4>Later this week</h4>
  </div>
  
  <% @occurrences.fetch(:upcoming).each do |occurrence| %>
    <%= render 'each_event', event: occurrence.event, occurrence: occurrence %>
  <% end %>
<% end %>

<div class="row">
  <div class="event-div">
    <div class="event-missing">
      <h4>Something missing?</h4>
      <p>
        <%= link_to "Sign up for a free account", new_user_registration_path %> to add your own events, or <%= link_to "get in touch", feedback_path %> to let me know what you'd like to see.
      </p>
    </div>
  </div>
</div>