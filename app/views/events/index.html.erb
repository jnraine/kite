<h1>Listing events</h1>

<% @events.each do |event| %>
  <div class="row">
    <div class="event-div">
      <div class="event-title">
        <h4>
          <%= link_to_function event.title, "$('##{event.id}').toggle()" %>
        </h4>
        <p>@ <%= event.venue %>&emsp;<%= number_to_currency(event.cost) %></p>
      </div>
      <div class="event-details" id="<%= event.id %>">
        <p>
          <%= event.address %>
        </p>
        <p>
          From <%= event.start_time.to_s(:time) %> to <%= event.end_time.to_s(:time) %> on 
          <%= event.date.strftime("%B %e") %>
        </p>
        <p>
          <%= event.details %>
        </p>
      </div>
    </div>
  </div>
<% end %>