<% @events.each do |event| %>
  <div class="row">

<div class="event-submenu">
        <ul>
          <li class="Selected"><a href="index.html">Basic example</a></li>
          <li><a href="horizontal-submenus.html">Horizontal sliding submenus example</a></li>
        </ul>
    </div>

    <div class="event-div">
      <div class="event-title">
        <h4>
          <%= event.title %>
        </h4>
        <p>
          @ <%= event.venue %>&emsp;
          <%= event.cost == 0 ? "Free" : number_to_currency(event.cost) %>
        </p>
      </div>
      <div class="event-details">
        <p>
          <%= event.address %>
        </p>
        <p>
          From <%= event.start_time.to_s(:time) %> to <%= event.end_time.to_s(:time) %> on 
          <%= event.date.strftime("%B %e") %>
        </p>
        <p>
          <%= auto_link(event.details, :urls, :target => "_blank" ) %>
        </p>
      </div>
    </div>
  </div>
<% end %>