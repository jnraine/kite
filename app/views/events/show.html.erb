<div class="row">
  <div class="well">
    <div class="event-title">
      <h4><%= @event.title %></h4>
      <p>@ <%= @event.venue %>&emsp;<%= number_to_currency(@event.cost) %></p>
    </div>
    <p>
      <%= @event.address %>
    </p>
    <p>
      From <%= @event.start_time.to_s(:time) %> to <%= @event.end_time.to_s(:time) %> on 
      <%= @event.date.strftime("%B %e") %>
    </p>
    <p>
      <%= @event.details %>
    </p>

    <br />
    <% if current_user == @event.user %>
      <%= link_to 'Edit', edit_event_path(@event) %> |
    <% end %>
    <%= link_to 'Back', events_path %>
  </div>
</div>