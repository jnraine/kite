<div class="row">
  <div class="event-div">
    <div class="event-title">
      <h4>
        <%= @event.title %>
      </h4>
      <p>
        @ <%= @event.venue.name %>&emsp;
        <%= @event.cost == 0 ? "Free" : number_to_currency(@event.cost) %>
      </p>
    </div>
      <p>
        <%= @event.venue.address %>
      </p>
      <p>
        From <%= @event.start_time.to_s(:time) %> to <%= @event.end_time.to_s(:time) %> on 
        <%= @event.date.strftime("%B %e") %>
      </p>
      <p>
        <%= auto_link(@event.details, :urls, :target => "_blank" ) %>
      </p>
      <br/>
      <p>
        <%= link_to "Edit", edit_event_path(@event) %> | <%= link_to "Back", list_path %>
      </p>
  </div>
</div>